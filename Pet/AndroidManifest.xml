<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="25" />

    <!-- 退出账号的权限 -->
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />
    <!-- 分享权限  -->
    <uses-permission android:name="android.permission.CAMERA" />
   <!-- 更改头像 用户所选的特性-->
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
     <!-- 更改头像权限  -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <!-- sd卡读取权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <!-- 调用打电话权限 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 粘性消息权限 -->
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <!-- 调用浏览器权限及网络权限 -->
    <!-- 调用微博的权限 QQ WX -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 获取短信验证码的权限 -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    
	<application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        <activity
            android:name=".GuideActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
       <!-- 进程被杀死后再进入的开启动画 -->
        <activity android:name="com.example.pet.KaiQiActivity"/>
        <activity android:name="com.example.pet.LoginActivity"/>
        <activity android:name="com.example.pet.RegisterActivity" />
        <activity android:name="com.example.pet.XieYiActivity" />
        <activity android:name="com.example.pet.ForgetPasswordActivity"/>
        <!--主页面  -->
        <activity android:name="com.example.pet.MainActivity"
            android:launchMode="singleTask"/>

        <!-- 资料信息界面 -->
        <activity
            android:name="com.example.pet.DataInformationActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <!-- 账户管理界面 -->
        <activity
            android:name="com.example.pet.AccountManagerActivity"
            android:launchMode="singleTop" />
        <!-- 修改密码界面 -->
        <activity android:name="com.example.pet.ResetPasswordActivity"
             android:windowSoftInputMode="stateHidden|adjustPan"/>
        <!-- 修改手机号界面 -->
        <activity android:name="com.example.pet.ResetTelephoneActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <!-- 修改邮箱界面 -->
        <activity android:name="com.example.pet.ResetEmailActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <!-- 修改密保设置界面 -->
        <activity android:name="com.example.pet.ResetSecuritySetActivity" />
        <activity android:name="com.example.pet.SetPasswordQuestionAnswerActivity" />
        <!-- 关于萌宠界面 -->
        <activity
            android:name="com.example.pet.AboutPetsActivity" />
        <!-- 举报与投诉界面  -->
        <activity android:name="com.example.pet.ReportComplaintActivity" />
        <!-- 功能介绍页面  -->
        <activity android:name="com.example.pet.FunctionGuideActivity" />
        <!-- 设置界面 -->
         <activity android:name="com.example.pet.SetActivity"/>
         
        <!--意见反馈界面 -->
        <activity
            android:name="com.example.pet.FeedbackActivity"
            android:launchMode="singleTop" />
        <!-- 用户帮助界面  -->
        <activity android:name="com.example.pet.UserHelpActivity" />"
        <!-- 广场详情页面 -->
        <activity android:name="com.example.pet.SquareDetailsActivity" 
            android:windowSoftInputMode="adjustPan"/>
        <!-- 相册动态详情页面 -->
        <activity android:name="com.example.pet.DongtaiAlbumDetailsActivity" />
        <!-- 动态   时光轴页面 -->
        <activity android:name="com.example.pet.TimeShaftActivity" />
        <!-- 发表说说页面 -->
        <activity android:name="com.example.pet.PublishStatesActivity" />
        <!-- 新建相册页面 -->
        <activity android:name="com.example.pet.NewAlbumActivity" />
        <!-- 宠物达人  宠物详情页面 -->
        <activity android:name="com.example.pet.PetDetailsActivity" />
        <!-- 宠物达人  发布宠物页面 -->
        <activity android:name="com.example.pet.PublishPetActivity" 
            android:launchMode="singleTop"/>
        <activity
            android:name="com.example.pet.DianpingActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.example.pet.XianqingActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.example.pet.FabuActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.example.pet.DianpuActivity"
            android:launchMode="singleTop" />

        <!-- 下面是第三方页面 -->
        <!-- 跳转到微博的页面及微博服务注册 -->
        <activity
            android:name="com.sina.weibo.sdk.component.WeiboSdkBrowser"
            android:configChanges="keyboardHidden|orientation"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <service
            android:name="com.sina.weibo.sdk.net.DownloadService"
            android:exported="false" >
        </service>
        <!-- 微信登录界面 -->
        <activity
            android:name=".wxapi.WXEntryActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoDisplay" />
        <!-- QQ登录界面 -->
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity android:name=".ReturnActivity" >
        </activity>
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent1105564187" />
                <!-- 100380359 100381104 222222 -->
            </intent-filter>
        </activity>
        <!-- 短信验证码 -->
        <activity
            android:name="cn.smssdk.SMSSDKUIShell"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
	</application>

</manifest>