<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ViewFlipper
            android:id="@+id/guide_viewflipper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:flipInterval="10000" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/home_yindao_one" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                 android:scaleType="fitXY"
                android:src="@drawable/home_yindao_two" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                 android:scaleType="fitXY"
                android:src="@drawable/home_yindao_three" />
        </ViewFlipper>

        <LinearLayout
            android:id="@+id/guide_buju"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/guide_start_pet"
                android:layout_width="148dp"
                android:layout_height="44dp"
                android:layout_marginBottom="48dp"
                android:background="@drawable/start_bt_bg"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/start_pet"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/guide_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/guide_rd_bt1"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:button="@null"
                    android:checked="true"
                    android:drawableRight="@drawable/guide_yuandian_selector" />

                <RadioButton
                    android:id="@+id/guide_rd_bt2"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="22dp"
                    android:button="@null"
                    android:drawableRight="@drawable/guide_yuandian_selector" />

                <RadioButton
                    android:id="@+id/guide_rd_bt3"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="22dp"
                    android:button="@null"
                    android:drawableRight="@drawable/guide_yuandian_selector" />
            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>