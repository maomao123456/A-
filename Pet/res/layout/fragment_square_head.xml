<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_whole" >
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="168dp">
	    <ViewFlipper 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:flipInterval="5000"
	        android:id="@+id/viewflipper_square">
	        <ImageView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:id="@+id/advertice1_image"
	            android:scaleType="fitXY"
	            android:src="@drawable/advertice1"/>
	        <ImageView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:id="@+id/advertice2_image"
	            android:scaleType="fitXY"
	            android:src="@drawable/big_pet1_square"/>
	        <ImageView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:id="@+id/advertice3_image"
	            android:scaleType="fitXY"
	            android:src="@drawable/advertice2"/>
	        <ImageView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:id="@+id/advertice4_image"
	            android:scaleType="fitXY"
	            android:src="@drawable/advertice3"/>
	        <ImageView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:id="@+id/advertice5_image"
	            android:scaleType="fitXY"
	            android:src="@drawable/advertice4"/>
	    </ViewFlipper>
	    <RadioGroup 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:id="@+id/radiogroup_square"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="2dp">
	        <RadioButton 
	            android:layout_width="14dp"
	            android:layout_height="14dp"
	            android:id="@+id/radiobutton1_square"
	            android:checked="true"
	            android:background="@drawable/point_square_selector"
	            android:button="@null"/>
	        <RadioButton 
	            android:layout_width="14dp"
	            android:layout_height="14dp"
	            android:id="@+id/radiobutton2_square"
	            android:layout_marginLeft="4dp"
	            android:background="@drawable/point_square_selector"
	            android:button="@null"/>
	        <RadioButton 
	            android:layout_width="14dp"
	            android:layout_height="14dp"
	            android:id="@+id/radiobutton3_square"
	            android:layout_marginLeft="4dp"
	            android:background="@drawable/point_square_selector"
	            android:button="@null"/>
	        <RadioButton 
	            android:layout_width="14dp"
	            android:layout_height="14dp"
	            android:id="@+id/radiobutton4_square"
	            android:layout_marginLeft="4dp"
	            android:background="@drawable/point_square_selector"
	            android:button="@null"/>
	        <RadioButton 
	            android:layout_width="14dp"
	            android:layout_height="14dp"
	            android:id="@+id/radiobutton5_square"
	            android:layout_marginLeft="4dp"
	            android:background="@drawable/point_square_selector"
	            android:button="@null"/>
	    </RadioGroup>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/bg_square"
	    android:orientation="horizontal"
	    android:paddingTop="15dp"
	    android:paddingBottom="15dp">
	    <TextView 
	        android:layout_width="63dp"
	        android:layout_height="55dp"
	        android:id="@+id/text_pet_talent_square"
	        android:background="@drawable/pet_daren_bg"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="8dp"
	        android:text="宠物达人"
	        android:gravity="center"
	        android:textColor="@color/text_33"
	        android:textSize="12sp"/>
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/image_pet2_square"
	        android:src="@drawable/pet_2"
	        android:layout_marginLeft="23dp"
	        android:layout_gravity="center_vertical"/>
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/image_pet3_square"
	        android:src="@drawable/pet_3"
	        android:layout_marginLeft="23dp"
	        android:layout_gravity="center_vertical"/>
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/image_pet4_square"
	        android:src="@drawable/pet_4"
	        android:layout_marginLeft="23dp"
	        android:layout_gravity="center_vertical"/>
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/image_next_square"
	        android:src="@drawable/xiangyou"
	        android:layout_marginLeft="10dp"
	        android:layout_gravity="center_vertical"/>
	</LinearLayout>
</LinearLayout>
