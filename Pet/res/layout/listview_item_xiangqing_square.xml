<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">
        <!-- 评论人头像 -->
        <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/head_pinglun_xiangqing_square"
	        android:src="@drawable/head1_pinglun"
	        android:layout_marginLeft="12dp"
	        android:layout_marginTop="12dp"
	        android:layout_marginBottom="22dp"/>
        <!-- 评论人昵称  评论内容 -->
		<LinearLayout 
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_marginLeft="13dp">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
		        android:id="@+id/name_pinglun_xiangqing_square"
		        android:text="小小酥"
		        android:textColor="@color/text_2b"
		        android:textSize="12sp"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="12dp"
		        android:id="@+id/pinglun_xiangqing_square"
		        android:text="两个宝宝好萌啊"
		        android:textColor="@color/text_91"
		        android:textSize="10sp"/>
		</LinearLayout>
		<!-- 评论时间  -->
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/time_pinglun_xiangqing_square"
		    android:layout_marginTop="20dp"
		    android:layout_marginRight="12dp"
		    android:textColor="@color/text_b8"
		    android:textSize="9sp"
		    android:text="1小时前"/>
    </LinearLayout>
    <!-- 评论回复列表 -->
    <TextView 
        android:id="@+id/replyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#00000000"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="10dp" />
    
</LinearLayout>
